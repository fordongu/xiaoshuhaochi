<div class="right_content">
	<div class="show_content_m">
   	        	 <div class="show_content_m_ti">
   	        	 	   <div class="showtop_t" id="positionname"><{if !empty($info)}>编辑商品标签<{else}>添加商品标签<{/if}></div>
   	        	 </div>
   	        	 <div class="show_content_m_t2">
   	        	 	
   	        	 	
   	        	 	
      <div style="width:auto;overflow-x:hidden;overflow-y:auto"> 
          <div class="tags"> 
          <div id="tagscontent">
            <form method="post" name="form1" action="<{ofunc type=url link="/admin/savegoodssign"}>" onsubmit="return subform('<{ofunc type=url link="/admin/goodssign"}>',this);">
              <div>
                <table border="0" cellspacing="2" cellpadding="4" class="list" name="table" id="table" width="100%">
                  <tbody>
                  	<tr onmouseover="this.bgColor='#F5F5F5';" onmouseout="this.bgColor='ffffff';" bgcolor="ffffff">
                      <td class="left">标签名称</td>
                      <td><input type="text" name="name" id="name" value="<{$info['name']}>" class="skey" style="width:150px;" ></td>
                    </tr>
                     
                     <tr onmouseover="this.bgColor='#F5F5F5';" onmouseout="this.bgColor='ffffff';" bgcolor="ffffff">
                      <td class="left" valign="top">商品标签图标</td>
                      <td>
                      	<img src="<{$info['imgurl']}>" width=15px height=15px id="imgshow" <{if  empty($info['imgurl'])}> style="display:none;"<{/if}>>
                      	<input type="hidden" name="img" id="img" value="<{$info['imgurl']}>" class="skey" style="width:150px;" >
                      	<span onclick="uploads();">上传图片</span>
                      	</td>
                    </tr> 
                    <tr onmouseover="this.bgColor='#F5F5F5';" onmouseout="this.bgColor='ffffff';" bgcolor="ffffff">
                      <td class="left">简单说明</td>
                      <td><textarea name="instro"><{$info['instro']}></textarea></td>
                    </tr>
                   <tr onmouseover="this.bgColor='#F5F5F5';" onmouseout="this.bgColor='ffffff';" bgcolor="ffffff">
                      <td class="left">标签类型</td>
                      <td>
                      	 <select name="typevalue">
                      	 <{foreach from=$hotlist key=mykey item=items}>
                          <option value="<{$mykey}>" <{if $info['typevalue'] == $mykey}>selected<{/if}>><{$items}></option>
                          <{/foreach}>	
                        </select>
                      </td>
                    </tr>
                    <input type="hidden" name="uid" id="uid" value="<{$info['id']}>" class="skey" style="width:150px;">
                    <input type="hidden" name="typename" id="typename" value="goods" class="skey" style="width:150px;">
                  </tbody>
                </table>
              </div>
              <div class="blank20"></div> 
               <input type="submit" value="确认提交" class="button">  
            </form>
          </div>
        </div>
        <div class="blank20"></div> 
      
      </div>
      <div class="clear"></div>
    </div>
    
    
    
    
    
    
    
</div> 
