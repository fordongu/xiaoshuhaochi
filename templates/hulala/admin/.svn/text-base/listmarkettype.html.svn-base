<script>
function addgoodstype(parent_id,itemname,itemid){ 
	var showtitle = '';
	var btnname= '';
  if(itemname == ''){
  	showtitle = '添加商城商品分类';
  	btnname = '确认添加';
  }else{
  	showtitle = '编辑商城商品分类';
  	btnname = '确认修改';
  }
 var datas = {parent_id: parent_id,itemname:itemname,itemid:itemid,btnname:btnname};
	var html = template.render('addtype', datas); 
	 var dialog =  art.dialog({
	 	   	id:'coslid',
        title:showtitle,
        content: html
   });
}

</script>
