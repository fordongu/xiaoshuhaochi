<{include file="<{$tempdir}>/public/top.html"}>
<link rel="stylesheet" type="text/css" href="<{$siteurl}>/templates/<{$tempdir}>/public/css/memberCenter.css"> 
<div class="box950 pad_tb_20" id="main">
			<div class="membercenter"><!--membercenter-->
				<div class="mc-left box150" id="mc-left"><!--mc-left-->
					 <{include file="<{$tempdir}>/membercenter/usermenu.html"}>
	
				</div><!--mc-left end-->			

				<div class="mc-right box790"><!--mc-right-->
					<div class="manageBox margin_bottom"><!--manageBox-->
						<div class="title"><!--title-->
							<p class="yleft"><span class="colortip"></span>
							<span class="title_name"><b>我的积分</b></span></p>
						</div><!--title end-->

						<div class="mr-middle"><!--mr-middle-->
							<div class="account_integral"><!--account_integral-->
								<div class="ai-wrap">
									<div class="ai-left">
										<p>可用积分 <span id="now-jifen"><{$member['score']}></span>，累计积分 <span id="leiji-jifen"><{$member['sumcore']|default:0}></span></p>
									</div>
			
									<div class="ai-right">
										<p><a href="/supplier/gift!index.do"><img src="/upload/shop/mc_duihuan.gif"></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  <a href="/help/hygl.html#jfgl" target="_blank" class="apanel">查看积分规则</a></p>
									</div>
									<div class="clear"></div>
								</div>

								<div class="jifen-title" id="jifen-title">
									<ul>
										<li class="c"><h3 data1="" data="<{ofunc type=url link="/membercenter/jifenlog"}>" onclick="openlink(this);"  >当前积分</h3></li>
										<li class="c"><h3 data1="in" data="<{ofunc type=url link="/membercenter/jifenlog/what/in"}>" onclick="openlink(this);"  >积分累计</h3></li>
										<li class="c"><h3 data1="out" data="<{ofunc type=url link="/membercenter/jifenlog/what/out"}>"onclick="openlink(this);"  >积分使用</h3></li>
									</ul>
									<div class="clear"></div>
								</div>

								<div class="m-m8-jifenlist" id="m-m8-jifenlist"><table>	<tbody><tr>     
									  <th class="m6-ilist1">日期</th>       
									  <th class="m6-ilist2">事件</th>      
									 <th class="m6-ilist3">详细说明</th>	
									 	<th class="m6-ilist4">积分增减</th>	</tr>	
									 	
									 	
									 	
									 	<{if count($list) > 0}>
									 <{foreach from=$list item=items}>  
									 		<tr>	 <td><{$items['addtime']|date_format:"%Y-%m-%d %H:%M:%S"}></td>		<td><{$items['title']|default:'&nbsp;'}></td>		<td><{$items['content']|default:'&nbsp;'}></td>		<td><span class="money"><{if $items['addtype'] != 1}>-<{/if}><{intval($items['result'])}></span></td>	</tr>
										   <{/foreach}>
		               <{else}>
										  	<tr><td colspan="4">暂无相关数据。</td></tr>
										<{/if}>
										 
										 
										 </tbody></table>
										 
										 <div class="total"><p>共<{$allcount}>条记录</p> </div>
								 	   <div class="page">共<{$pageall}>页&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;到第 
								 		  <input type="text" id="topage" value="<{$pagenow}>" class="gotopage">&nbsp;页&nbsp;&nbsp;
								 		  <input type="image" class="sure" data="<{$pagelink}>" src="/upload/shop/fenye_sure.jpg" onclick="gotopage(this);" value="GO">
								 	   </div>
								 		<div class="clear">	</div>
								 	</div>

								<div id="showrecord" style="display:none;">  </div>
							</div><!--account_integral end-->
						</div><!--mr-middle end-->
					</div><!--mc-right end-->
				</div><!--membercenter end-->
			</div><!--manageBox end-->
			<div class="clear"></div>
		</div>
 
<script>
	var whatdo = '<{$what}>';
	$(document).ready(function(){ 
		  var findobj = $('#jifen-title').find('h3');
		  for(var i=0;i< $(findobj).length;i++){
		  	 
		  	if(whatdo == $(findobj).eq(i).attr('data1')){
		  	  findobj.eq(i).addClass('addborder');
		  	}
		  	 
		  }
	});
	function openlink(obj){
		window.location.href=$(obj).attr('data');
	}
	</script>
<{include file="<{$tempdir}>/public/foot.html"}>
